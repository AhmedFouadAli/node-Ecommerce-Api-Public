    /* List of endpoints */
    .endpoint-list {
      list-style: none;
      padding: 0;
    }
    .endpoint-list li {
      margin-bottom: 10px;
      padding: 10px;
      background-color: #f9f9f9;
      border-radius: 4px;
      cursor: pointer;
    }
    /* Endpoint link styles */
    .endpoint-list li a {
      color: #333;
      text-decoration: none;
      transition: color 0.3s;
    }
    .endpoint-list li:hover {
      background-color: #e5e5e5;
    }
    /* Add some interactivity using JavaScript */
    .endpoint-list li:hover a {
      color: #007bff;
    }
  </style>
</head>
